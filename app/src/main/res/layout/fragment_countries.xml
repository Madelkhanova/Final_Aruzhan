<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/inD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="India"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/usA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inD"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="USA"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/auS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usA"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Australia"

        android:textSize="30sp" />

    <TextView
        android:id="@+id/ruS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auS"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Russia"

        android:textSize="30sp" />

    <TextView
        android:id="@+id/frA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ruS"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="France"

        android:textSize="30sp" />

    <TextView
        android:id="@+id/gbA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frA"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="United Kingdom"

        android:textSize="30sp" />

</RelativeLayout>